<Window x:Class="Kotenyek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kotenyek"
        xmlns:view="clr-namespace:Kotenyek.View"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        d:DataContext="{d:DesignInstance Type=view:MainView}"
        mc:Ignorable="d"
        Title="Termék feltöltés" Width="750" Height="600" MinHeight="600" MinWidth="750" WindowStartupLocation="CenterScreen" Loaded="MainWindow_Loaded" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <DockPanel x:Name="mainDockPanel" LastChildFill="False" Margin="20" IsEnabled="False">
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Név:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productName" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Leírás:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productShortDescription" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Mosási útmutató:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productDescription" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Hossz:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productLength" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Szélesség:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productWidth" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Ár:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productPrice" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Kategória:" Width="130" Margin="0 0 16 0"/>
                <!--checkbox-->
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Képek:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="imagePathTB" Text="{Binding Path=ImageURL, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" IsReadOnly="True"/>
                <Button Style="{DynamicResource ButtonStyle1}" Margin="5 0" Click="AddImage_Click" Padding="16 8" Width="150" x:Name="imageUploadBT" >
                    <fa:ImageAwesome Icon="Spinner" Spin="True" Width="18" Height="18"/>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Szín:" Width="130" Margin="0 0 16 0"/>
                <!--radiobutton-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Kapható színek:" Width="130" Margin="0 0 16 0"/>
                <!--checkbox-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Label Content="Cikkszám:" Width="130" Margin="0 0 16 0"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" Width="300" x:Name="productUID" VerticalContentAlignment="Center" IsReadOnly="False"/>
            </StackPanel>
        </StackPanel>
        <Button Style="{DynamicResource ButtonStyle1}" Content="Import fájl mentése" Click="SaveCSV_Click" DockPanel.Dock="Right" Padding="16 8" Margin="10 0 0 0" VerticalAlignment="Bottom" FontWeight="Bold" Background="Green" />
        <Button Style="{DynamicResource ButtonStyle1}" Content="Hozzáadás és Új termék" Click="AddNewProduct_Click" DockPanel.Dock="Right" Padding="16 8" Margin="10 0 0 0" VerticalAlignment="Bottom" />
        <Button Style="{DynamicResource ButtonStyle1}" Content="Hozzáadás és Új szín" Click="AddNewColor_Click" DockPanel.Dock="Right" Padding="16 8" Margin="10 0 0 0" VerticalAlignment="Bottom" />
        <Button Style="{DynamicResource ButtonStyle1}" Content="Kijelentkezés" Click="LogOut_Click" DockPanel.Dock="Left" Padding="16 8" Margin="0 0 10 0" VerticalAlignment="Bottom" Background="Tomato" />
    </DockPanel>
</Window>
